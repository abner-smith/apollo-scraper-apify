{
  "title": "Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "apolloSearchUrl": {
      "title": "Apollo search URL",
      "type": "string",
      "description": "Cole aqui a URL de busca do Apollo (com filtros aplicados).",
      "editor": "textfield"
    },
    "cookiesJson": {
      "title": "Cookies (JSON)",
      "type": "string",
      "description": "Cole aqui os cookies exportados (JSON).",
      "editor": "textarea"
    },
    "maxLeads": {
      "title": "Quantidade máxima de leads",
      "type": "integer",
      "minimum": 1,
      "default": 150,
      "editor": "number"
    },
    "useApifyProxy": {
      "title": "Usar Apify Proxy",
      "type": "boolean",
      "default": true,
      "editor": "checkbox"
    },
    "notificationEmail": {
      "title": "E-mail para notificação (opcional)",
      "type": "string",
      "description": "Se quiser receber notificação, informe um e-mail.",
      "editor": "textfield"
    }
  },
  "required": ["apolloSearchUrl", "cookiesJson"]
}
